<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ page_title }}</title>
    <meta name="description" content="{{ page_description | escape }}">
    {{ content_for_header }} <!-- Obligatorio para scripts y estilos -->

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  </head>

  <body>
    {% section 'header' %}

    {{ content_for_layout }} <!-- Obligatorio para renderizar las plantillas -->

    {% section 'footer' %}

    <!-- Theme JS -->
    <script src="{{ 'theme.js' | asset_url }}"></script>
  </body>
</html>
