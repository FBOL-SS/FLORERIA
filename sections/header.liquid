{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo Width",
      "default": 150
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "ğŸšš EnvÃ­o gratis en compras mayores a $1,000 MXN. Â¡Aprovecha hoy!"
    }
  ]
}
{% endschema %}

<header class="site-header">
  <div class="header-container">
    <!-- Hamburger Icon -->
    <button class="hamburger" aria-label="Toggle Menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <!-- Top Right Icons -->
    <div class="header-utility">
      <a href="/search" aria-label="Buscar" class="icon-button">ğŸ”</a>
      <a href="/account" aria-label="Cuenta" class="icon-button">ğŸ‘¤</a>
      <a href="/cart" aria-label="Carrito" class="icon-button">
        ğŸ›’<span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>

    <!-- Centered Logo -->
    <div class="header-logo">
      {% if section.settings.logo %}
        <a href="/" class="logo-link">
          <img src="{{ section.settings.logo | img_url: 'master' }}" alt="Logo" style="width: {{ section.settings.logo_width }}px;">
        </a>
      {% else %}
        <a href="/" class="logo-text">{{ shop.name }}</a>
      {% endif %}
    </div>

    <!-- Desktop Navigation -->
    <nav class="header-nav">
      <ul class="nav-menu">
        {% for link in linklists[section.settings.main_menu].links %}
          <li><a href="{{ link.url }}" class="nav-link">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>

<!-- Announcement Bar -->
<div class="announcement-bar">
  {{ section.settings.announcement_text }}
</div>

<!-- Mobile Menu -->
<div class="mobile-menu" aria-hidden="true">
  <ul class="mobile-nav-menu">
    {% for link in linklists[section.settings.main_menu].links %}
      <li class="mobile-nav-item">
        <a href="{{ link.url }}" class="mobile-nav-link">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
</div>
