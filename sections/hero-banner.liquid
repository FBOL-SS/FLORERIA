{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading",
      "default": "Descubre la Belleza en Cada Pétalo"
    },
    {
      "type": "text",
      "id": "hero_subheading",
      "label": "Subheading",
      "default": "Arreglos Florales para Cada Ocasión"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explorar Arreglos"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}

<div class="hero-banner" style="position:relative; text-align:center; overflow:hidden;">
  {% if section.settings.hero_image %}
    <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="Banner" style="width:100%; height:auto;">
  {% endif %}
  <div style="position:absolute; top:50%; left:50%; transform:translate(-50%, -50%); color:white; text-shadow: 0 2px 4px rgba(0,0,0,0.5);">
    <h1 style="font-size:3rem; font-family:'Playfair Display', serif;">{{ section.settings.hero_heading }}</h1>
    <p style="font-size:1.5rem; margin:20px 0;">{{ section.settings.hero_subheading }}</p>
    {% if section.settings.button_link %}
      <a href="{{ section.settings.button_link }}" class="button-primary">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>
