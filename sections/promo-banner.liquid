{% schema %}
{
  "name": "Promo Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promo Image"
    },
    {
      "type": "text",
      "id": "promo_heading",
      "label": "Promo Heading",
      "default": "¡Oferta Especial!"
    },
    {
      "type": "text",
      "id": "promo_subheading",
      "label": "Promo Subheading",
      "default": "Aprovecha nuestras promociones exclusivas."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Ver Promoción"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Promo Banner",
      "category": "Home"
    }
  ]
}
{% endschema %}

<div class="promo-banner">
  {% if section.settings.promo_image %}
    <img src="{{ section.settings.promo_image | img_url: 'master' }}" alt="Promo" class="promo-image">
  {% endif %}
  <div class="promo-content">
    <h2>{{ section.settings.promo_heading }}</h2>
    <p>{{ section.settings.promo_subheading }}</p>
    {% if section.settings.button_link %}
      <a href="{{ section.settings.button_link }}" class="button-primary">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>
